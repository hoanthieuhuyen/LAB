@using Kendo.Mvc.UI
@model THA.MODEL.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section header{Đăng nhập}
<div class="container">
    <div class="row">
        <div class="col-lg-12">      
                <h3>ĐĂNG NHẬP HỆ THỐNG</h3>                                
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.ValidationSummary(false, "",new { @class = "text-danger" });                                
                    <div class="form-group">
                        @Html.LabelFor(m => m.USERNAME, htmlAttributes: new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.USERNAME, new { @class = "form-control", @placeholder="Tên đăng nhập", @autofocus = "autofocus" })
                    
                        @*@Html.Kendo().TextBox().Name("txtUser").HtmlAttributes(new { style = "width: 100%;" })*@
                    </div>
                    <div class="form-group">                        
                        @Html.LabelFor(m => m.PASSWORD, htmlAttributes: new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.PASSWORD, new { @class = "form-control", @placeholder="Mật khẩu", type = "Password" })   

                        @*@Html.Kendo().TextBox().Name("txtPass").HtmlAttributes(new { style = "width: 100%;" })*@                                                      
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Đăng nhập" class="btn btn-primary" />
                    </div>
                 }         
        </div>
     </div>
</div>